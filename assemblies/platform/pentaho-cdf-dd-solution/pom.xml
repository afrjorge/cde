<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>pentaho</groupId>
    <artifactId>cde-plugin-assemblies-platform</artifactId>
    <version>8.1.0.0-SNAPSHOT</version>
  </parent>
  <artifactId>pentaho-cdf-dd-samples</artifactId>
  <version>8.1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <description>Pentaho Community Dashboard Editor plugin samples for the Platform Server</description>
  <properties>
    <assembly_appendId>false</assembly_appendId>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <finalName>pentaho-cdf-dd-solution-${project.version}</finalName>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
