<?xml version="1.0"?>
<DesignerComponent>
  <Header>
    <Name>Date Range Selector Component</Name>
    <IName>DateRangeSelectorComponent</IName>
    <Description>Date Range Selector Component</Description>
    <Category>SELECTORS</Category>
    <CatDescription>Selects</CatDescription>
    <Type>PalleteEntry</Type>
    <Version>1.0</Version>
  </Header>
  <Contents>
    <Model>
      <!-- Standard CDE properties -->
      <Property>executeAtStart</Property>
      <Property>htmlObject</Property>
      <Property>listeners</Property>
      <Property>preExecution</Property>
      <Property>postExecution</Property>
      <Property>preChange</Property>
      <Property>postChange</Property>

      <Definition name="dashboardParameterMap">
        <Property>start</Property>
        <Property>end</Property>
        <Property>granularity</Property>
        <Property>precision</Property>
      </Definition>

      <Definition name="componentDefinition">
        <Property>actionsPosition</Property>
        <Property>inputFormat</Property>
      </Definition>
    </Model>
    <Implementation>
      <CustomProperties>
        <DesignerProperty>
          <Header>
            <Name>start</Name>
            <Parent>BaseProperty</Parent>
            <DefaultValue></DefaultValue>
            <Description>Start Date Parameter</Description>
            <Tooltip>Dashboard parameter to bind to the selector start date value </Tooltip>
            <InputType>Parameter</InputType>
            <OutputType>String</OutputType>
            <Order>100</Order>
            <Advanced>false</Advanced>
            <Version>1.0</Version>
          </Header>
        </DesignerProperty>

        <DesignerProperty>
          <Header>
            <Name>end</Name>
            <Parent>BaseProperty</Parent>
            <DefaultValue></DefaultValue>
            <Description>End Date Parameter</Description>
            <Tooltip>Dashboard parameter to bind to the selector end date value </Tooltip>
            <InputType>Parameter</InputType>
            <OutputType>String</OutputType>
            <Order>101</Order>
            <Advanced>false</Advanced>
            <Version>1.0</Version>
          </Header>
        </DesignerProperty>

        <DesignerProperty>
          <Header>
            <Name>precision</Name>
            <Parent>BaseProperty</Parent>
            <DefaultValue></DefaultValue>
            <Description>Precision Parameter</Description>
            <Tooltip>Dashboard parameter to bind to the selector precision value </Tooltip>
            <InputType>Parameter</InputType>
            <OutputType>String</OutputType>
            <Order>102</Order>
            <Advanced>false</Advanced>
            <Version>1.0</Version>
          </Header>
        </DesignerProperty>

        <DesignerProperty>
          <Header>
            <Name>granularity</Name>
            <Parent>BaseProperty</Parent>
            <DefaultValue></DefaultValue>
            <Description>Granularity Parameter</Description>
            <Tooltip>Dashboard parameter to bind to the selector granularity value </Tooltip>
            <InputType>Parameter</InputType>
            <OutputType>String</OutputType>
            <Order>103</Order>
            <Advanced>false</Advanced>
            <Version>1.0</Version>
          </Header>
        </DesignerProperty>

        <DesignerProperty>
          <Header>
            <Name>actionsPosition</Name>
            <Parent>BaseProperty</Parent>
            <DefaultValue>top</DefaultValue>
            <Description>Action Buttons Position</Description>
            <Tooltip>Choose 'top' or 'bottom' to change the position of the action buttons </Tooltip>
            <InputType type="valuelist"/>
            <OutputType>String</OutputType>
            <Order>200</Order>
            <Advanced>true</Advanced>
            <Version>1.0</Version>
          </Header>
          <Values>
            <Value display="Top">top</Value>
            <Value display="Bottom">bottom</Value>
          </Values>
        </DesignerProperty>

        <DesignerProperty>
          <Header>
            <Name>inputFormat</Name>
            <Parent>BaseProperty</Parent>
            <DefaultValue>YYYY-MM-DD</DefaultValue>
            <Description>Input Format</Description>
            <Tooltip>Format of the dashboard date parameters </Tooltip>
            <InputType>String</InputType>
            <OutputType>String</OutputType>
            <Order>201</Order>
            <Advanced>false</Advanced>
            <Version>1.0</Version>
          </Header>
        </DesignerProperty>
      </CustomProperties>
    </Implementation>
  </Contents>
</DesignerComponent>
